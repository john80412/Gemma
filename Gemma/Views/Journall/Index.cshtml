    window.onmousemove = function (e) {
        var x = e.clientX;//滑鼠x位置!!
        var y = e.clientY;//滑鼠y位置!!
        let num = ['1', '2', '3', '4', '5', '6', '7', '8']
        num.forEach(i => {
            document.getElementById(i).style.left = (x + 10) + 'px'; //你給我離滑鼠離遠一點
            document.getElementById(i).style.top = (y + 10) + 'px';
        });
    }
</script>
