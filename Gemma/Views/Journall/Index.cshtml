            font-weight: bold;
            visibility: hidden;
            opacity: 0;
            position: fixed;
            z-index: 9999;
            white-space:nowrap;
        }

        .wordshow {
            display: flex;
            background: linear-gradient(180deg,rgba(255,255,255,0) 65%, #FFD0AE 65%);
            font-size: 20px;
            font-weight: bold
        }
        /*.container .img:hover .word {
