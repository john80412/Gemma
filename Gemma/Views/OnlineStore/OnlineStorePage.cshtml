@section endJS{

    <script>
        $(document).ready(function () {
            $("#CategoryBtn").click(CategoryBtn);
            $("#ColorBtn").click(ColorBtn);

            $('#orderby #@Session["PriceOrderBy"].ToString()').attr('selected', 'selected');
        });


        function CategoryBtn() {
            var categoryId = document.getElementById("Category");
            var icon = document.getElementById("IconCategory");

            BtnSidebar(categoryId, icon);
        }

        function ColorBtn() {
            var colorId = document.getElementById("Color");
            var icon = document.getElementById("IconColor");

            BtnSidebar(colorId, icon);
        }

        function BtnSidebar(Id, icon) {
            if (Id.className.indexOf("w3-show") == -1) {
                Id.className += " w3-show";

                // 換 icon(+ -> -)
                icon.className = icon.className.replace("fa fa-plus");
                icon.className = " fa fa-minus";
            } else {
                Id.className = Id.className.replace(" w3-show", "");

                // 換 icon(- -> +)
                icon.className = icon.className.replace("fa fa-minus");
                icon.className = " fa fa-plus";
            }
        }


    </script>
}


